<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{ pageTitle }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/main.css">
    </head>
    <body class="{{ bodyClass }}">
        {% include 'components/topbar.njk' %}
        <section class="hero">
            <section class="hero__slogan">
                <div class="hero__text">
                    <h1 class="hero__headline">{{ claim | safe }}</h1>
                    <p class="hero__p">{{ subclaim }}</p>
                    <p class="hero__p hero__p--strong">{{ ctaDescription }}</p>
                    {% if ctaLinkText %}
                        <a class="cta" href="{{ ctaLink }}">{{ ctaLinkText }}</a>
                    {% endif %}
                </div>
            </section>
        </section>
        {{ content | safe }}
    </body>
</html>