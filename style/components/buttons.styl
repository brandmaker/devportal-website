    padding 1rem 2rem
    border-radius 32px
    background $mindaro
    background linear-gradient(90deg, rgba(84,198,146,1) 0%, rgba(203,237,105,1) 100%)
    color white
    text-align center
    display inline-block
    font-size 1.5rem
    font-weight 600
    transition all .3s ease-out
    &:hover
        color rgb(169,141,255)