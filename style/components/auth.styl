.hero.hero--auth
    display: block;
    height: auto;
    .hero__header
        margin: 0;
        padding: 0 1rem;
        position: relative;
        height: auto;
        max-width: 1200px;
        justify-content: flex-start;
        text-align: left;
        .hero__headline
            text-align: left;
            width: 100%;
            margin-bottom: 0;
            margin: 0 auto 4rem;
            max-width: 1280px;
        .topbar.description
            text-align: left;
            color: #fff;
            font-size: 1.25rem;
            font-weight: lighter;
            width: 100%;
            display: flex;
            justify-content: flex-start;
            padding: 1rem 0;
        .topbar-stick-top 
            position: -webkit-sticky;
            position: sticky;
            top: 75px;
            height: 0;
            width: 98vw;
            margin-left: -1rem
            border-bottom: 1px solid #8452FF;
            background: #0e133c;
            z-index: 10;
    .mainlayout 
        display: flex;
        flex-direction: row;
        .navigation-wrapper
            position: sticky;
            top: 75px;
            width: 30vw;
            max-width: 30rem;
            height: calc(100vh - 105px);
            overflow: auto;
            background-color: $bg-light;
            padding: 1em;

            scrollbar-color: $navigation-scroll transparent !important;
            scrollbar-width: thin;

            &::-webkit-scrollbar {
                width: 20px;
                height: 20px;
            }

            &::-webkit-scrollbar-track {
                box-shadow: inset 0 0 20px 20px transparent;
                border: solid 6px transparent;
            }

            &::-webkit-scrollbar-thumb {
                box-shadow: inset 0 0 20px 20px $navigation-scroll;
                border: solid 6px transparent;
                border-radius: 20px;
            }
            /* set button(top and bottom of the scrollbar) */
            &::-webkit-scrollbar-button {
                display: none;
            }

            &::-webkit-scrollbar-corner {
                background-color: transparent;
            }
            .navigation-section 
                padding-top: .5em;
                padding-bottom: 1em;
                color: #fff;
                cursor: default;
                .header 
                    display: flex;
                    flex-direction: row;
                    align-items: center;
                    .navigation-headline 
                        font-size: medium;
                        text-transform: uppercase;
                .body
                    .navigation-link
                        margin-bottom: 1rem;
                        .navigation-link.tag.header 
                            padding: .2rem .2rem .2rem 1rem;
                            margin: 0 -1rem;
                            .navigation-linktag 
                                display: block;
                                font-size: 1.25rem;
                                font-weight: 400;
                                padding: .25rem .5rem .25rem 0;
            .navigation-section:not(:last-child) 
                border-bottom: 1px solid #6126EF;
        .main 
            background-color: #0a0c23;
            color: #fff;
            min-height: 100vh;
            width: 70vw;
            padding: 0 3em 10rem;
        @media(min-width: 100rem)
            .main
                width: calc(100vw - 30rem);