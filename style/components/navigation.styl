.mainnav 
    position absolute
    top 0
    right 0
    &__list 
        display flex
        list-style none
        align-items center
        height 75px
        margin 0
        padding 0
        &item 
            margin 0
            position relative
            display block
            height 100%
            display flex
            align-items center
            &:hover
                background rgba(255,255,255,.1)
            &link 
                padding 0 3.5rem
                color white
                font-size 1.125rem
                text-decoration none
                display block
                &:before
                    display: block;
                    content: attr(title);
                    font-weight: bold
                    height: 0;
                    overflow: hidden;
                    visibility: hidden;
        
            // Sub
            ul
                visibility hidden
                padding 0
                position absolute
                top 75px
                padding-top 1rem
                left 0
                right 0
                width 200%
                text-align left
                opacity 0
                transition opacity 0.3s ease-out
                z-index 3
                background white
                box-shadow 0 0 30px rgba(0,0,0,.5)
                padding-bottom 1rem
                .mainnav__listitem
                    display block
                    &link
                        color $bg-medium
                        padding 1rem 1rem
                        line-height 1
                        display block
                        font-weight 400
                        transition all .3s ease-out
                        border-left 0px solid transparent
                        &:hover
                            border-left 4px solid $orange
                    &:hover
                        z-index 3
                        > a
                            color $orange
                            z-index 4
            &:hover
                z-index 15
                > .mainnav__listitemlink
                    color $orange
                    z-index 10
                    position: relative
                &.mainnav__listitem--haschildren
                    font-weight bold
                ul
                    visibility visible
                    opacity 1