.mainnav 
    &__list
        list-style none
        align-items center
        height 100px
        margin 0
        padding 0
        &__main
            display flex
            list-style none
            align-items center
            height 100px
            margin 0
            padding 0
        &item 
            margin 0
            position relative
            display block
            height 100%
            display flex
            align-items center
            &:hover
                background rgba(255,255,255,.1)
            &link 
                padding 0 3.5rem
                color white
                font-size 1.125rem
                text-decoration none
                display block
                &:before
                    display: block;
                    content: attr(title);
                    font-weight: bold
                    height: 0;
                    overflow: hidden;
                    visibility: hidden;
        
            // Sub
            ul
                visibility hidden
                padding 0
                position absolute
                padding-top 1rem
                right: 0
                top: 100px
                width 200%
                text-align left
                opacity 0
                transition opacity 0.3s ease-out
                background white
                box-shadow 0 0 30px rgba(0,0,0,.5)
                padding-bottom 1rem
                height auto
                .mainnav__listitem
                    display block
                    background white
                    height: auto
                    position: relative
                    &link
                        color $bg-medium
                        padding 1rem 1rem
                        line-height 1
                        display block
                        text-align: right
                        font-weight 400
                        transition all .3s ease-out
                        border-left 0px solid transparent
                        &:hover
                            border-right 4px solid $orange
                    ul
                        visibility hidden
                        padding 0
                        position absolute
                        padding-top 1rem
                        right 100%
                        top 0
                        width 75%
                        text-align left
                        opacity 0
                        transition opacity 0.3s ease-out
                        background white
                        box-shadow 0 0 30px rgba(0,0,0,.5)
                        padding-bottom 1rem
                        .mainnav__listitem
                            position relative
                            ul
                                padding 0
                                visibility hidden
                                opacity 0
                                position absolute
                                padding-top 1rem
                                right 100%
                                width 75%
                                text-align left
                                transition opacity 0.3s ease-out
                                background white
                                box-shadow 0 0 30px rgba(0,0,0,.5)
                                padding-bottom 1rem
                            &:hover
                                ul
                                    opacity 1
                                    visibility: visible
                    &:hover
                        ul
                            visibility: visible
                            opacity 1
                            right: 100%
                            top: 0
                        > a
                            color $orange
            &:hover
                z-index 15
                > .mainnav__listitemlink
                    color $orange
                    z-index 10
                    position: relative
                &.mainnav__listitem--haschildren
                    font-weight bold
                ul
                    visibility visible
                    opacity 1